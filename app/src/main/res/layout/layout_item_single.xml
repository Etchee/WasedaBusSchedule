<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/item_time_text_size"
        android:text="@string/sample_hour"
        />

    <TextView
        android:id="@+id/semiColon"
        android:layout_toRightOf="@id/item_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/item_time_text_size"
        android:text="@string/semicolon"
        />

    <TextView
        android:id="@+id/item_min"
        android:layout_toRightOf="@id/semiColon"
        android:textSize="@dimen/item_time_text_size"
        android:text="@string/sample_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/semiColon2"
        android:layout_toRightOf="@id/item_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/item_time_text_size"
        android:text="@string/semicolon"
        />

    <TextView
        android:id="@+id/item_sec"
        android:layout_toRightOf="@id/semiColon2"
        android:textSize="@dimen/item_time_text_size"
        android:text="@string/_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>