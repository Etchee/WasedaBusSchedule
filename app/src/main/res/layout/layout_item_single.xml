<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_background_height"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />
    <View
        android:id="@+id/drop_shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/shadow_height"
        android:layout_alignBottom="@id/item_image"
        android:background="@drawable/item_drop_shadow"
        />

    <TextView
        android:id="@+id/item_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_image"
        android:text="@string/sample_hour"
        android:textColor="@color/PearlWhite"
        android:textSize="@dimen/item_time_text_size"
        android:fontFamily="sans-serif-thin"
        />

    <TextView
        android:id="@+id/semiColon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_image"
        android:layout_toRightOf="@id/item_hour"
        android:text="@string/semicolon"
        android:textColor="@color/PearlWhite"
        android:fontFamily="sans-serif-thin"
        android:textSize="@dimen/item_time_text_size"
        />

    <TextView
        android:id="@+id/item_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_image"
        android:layout_toRightOf="@id/semiColon"
        android:text="@string/sample_min"
        android:textColor="@color/PearlWhite"
        android:fontFamily="sans-serif-thin"
        android:textSize="@dimen/item_time_text_size" />

    <TextView
        android:id="@+id/semiColon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_image"
        android:layout_toRightOf="@id/item_min"
        android:text="@string/semicolon"
        android:textColor="@color/PearlWhite"
        android:fontFamily="sans-serif-thin"
        android:textSize="@dimen/item_time_text_size"
        />

    <TextView
        android:id="@+id/item_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_image"
        android:layout_toRightOf="@id/semiColon2"
        android:text="@string/_60"
        android:textColor="@color/PearlWhite"
        android:fontFamily="sans-serif-thin"
        android:textSize="@dimen/item_time_text_size" />

</RelativeLayout>